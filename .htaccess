# Aktifkan Rewrite Engine
RewriteEngine On

# Hilangkan .html dari URL dan tetap bisa diakses
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirect dari URL yang ada .html ke tanpa .html (SEO Friendly)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

# ==========================
# Tambahan opsional lainnya
# ==========================

# Paksa HTTPS (jika pakai SSL)
# RewriteCond %{HTTPS} off
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Indexing file index.html atau index.php secara otomatis
DirectoryIndex index.html index.php

# Matikan directory browsing (biar nggak bisa lihat isi folder langsung)
Options -Indexes

# Set waktu cache untuk file statis (CSS, JS, gambar)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
</IfModule>
